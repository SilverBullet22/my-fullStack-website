{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "frontend/dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ],
  "functions": {
    "api/**": {
      "runtime": "nodejs20.x"
    }
  }
}
